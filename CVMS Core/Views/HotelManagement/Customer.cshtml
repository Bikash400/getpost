@model CVMSCore.BAL.Models.HotelManagement.LogincustomerModel
@{
    ViewData["Title"] = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="text-align:center">CUSTOMERS</h1>



<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN" crossorigin="anonymous">
<script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>



@using (Html.BeginForm("Customerloginpage","HotelManagement", FormMethod.Post))
{
 
    <div class="form-outline mb-4">
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.LabelFor(model => model.Name, new { @class = "form-label" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <!-- Password input -->
    <div class="form-outline mb-4">
        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
        @Html.LabelFor(model => model.Password, new { @class = "form-label" })
        @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
    </div>
    <!-- Submit button -->
    <button type="submit" class="btn btn-primary btn-block mb-4">Log In</button>
}

