
@{
    ViewData["Title"] = "landingpage";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Hotel Management</title>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.7.1.js" integrity="sha256-eKhayi8LEQwp4NKxN+CfCh+3qOVUtJn3QNZ0TciWLP4=" crossorigin="anonymous"></script>
    
    <title>Hotel Management System</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f9f9f9;
        }

        header {
            background-color: #2c3e50; /* Dark Blue */
            color: #fff;
            text-align: center;
            padding: 1em 0;
        }

        nav {
            background-color: #34495e; /* Blue Grey */
            color: #fff;
            padding: 1em;
            text-align: center;
        }

            nav a {
                color: #fff;
                text-decoration: none;
                padding: 1em;
                margin: 0 1em;
            }

        section {
            padding: 2em;
        }

        footer {
            background-color: #2c3e50; /* Dark Blue */
            color: #fff;
            text-align: center;
            padding: 1em 0;
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .card {
            border: none;
            color: white;
        }

            .card h1 {
                font-size: 2.5rem;
            }

        #admin {
            background-color: #dc3545; /* Bootstrap red color */
        }

        #employee {
            background-color: #28a745; /* Bootstrap green color */
        }

        #customer {
            background-color: #17a2b8; /* Bootstrap aqua color */
        }

        .card-img-overlay {
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .container {
            padding-top: 20px;
        }

        .card-img {
            width: 100%;
            height: auto;
        }
    </style>
</head>
<body>

    <header>
        <h1>Hotel Management System</h1>
    </header>

    <nav>
        <a id="admin" href="#admin" >Admin</a>
        <a id="employee" href="#employee">Employee</a>
        <a id="customer" href="#customer">Customer</a>
    </nav>
    <div>
        <img src="~/content/image/backgroundimage.jpg" alt="Error" style="height: 540px; width: 100%;">
    </div>

    <footer>
        <p>&copy; 2023 Hotel Management System</p>
    </footer>

    <script>
        $('#admin').click(function () {
            window.location.href = 'https://localhost:7044/hotelmanagement/admin';
        });
        $('#employee').click(function () {
            window.location.href = 'https://localhost:7044/hotelmanagement/employeedashboardpage';
        });
        $('#customer').click(function () {
            window.location.href = 'https://localhost:7044/hotelmanagement/customer';
        });


    </script>

</body>
</html>



